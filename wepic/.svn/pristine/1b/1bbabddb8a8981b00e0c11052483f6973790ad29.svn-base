.container_body{
	width:870px;
	height:530px;
	border-radius:5px;
	background:#fff;
	margin:10px auto 40px;
	text-align:center;
	font-family:"宋体";
	}


.container_body .info_top{
	line-height:90px;
	font-family:"微软雅黑";
	color:#000;
	font-size:26px;
	height:78px;
	width:790px;
	margin:0px auto;
	border-bottom:1px solid #e8e8e8;
	}

.container_body .info_detail{
	width:790px;
	height:400px;
	margin:0px auto 10px;
	border-bottom:1px solid #e8e8e8;
	}
.container_body .info_detail .div_step{
	position:relative;
	top:0;
	left:0;
	width:660px;
	height:50px;
	margin:0px auto;
	font-family:"微软雅黑";
	}

.container_body .info_detail .div_step .step_character div{
	float:left;
	width:165px;
	text-align:center;
	margin:0 auto;
	}
.container_body .info_detail .div_step .step_now_character{
	color:#ee563e;
	}	
	
	
	
	
.container_body .info_detail .div_step .step_ico{
	position:relative;
	top:10px;
	left:0;
	margin-top:26px;
	margin-left: 73px;
	}
.container_body .info_detail .div_step .step_ico div{
	float:left;
	}
.container_body .info_detail .div_step .step_gey_line{
	border-bottom:1px solid #e8eae9;
	width:160px;
	height:3px;
	}

.container_body .info_detail .div_step .step_ico .step_now_circle{
	width:9px;
	height:9px;
	background:url(../../../pubimg/images/edit3.png) -90px -263px;
	}
.container_body .info_detail .div_step .step_ico .step_gey_circle{
	width:7px;
	height:7px;
	background:url(../../../pubimg/images/edit3.png) -104px -263px;
	}
	
	
	
	
.container_body .info_detail .info_password{
	position:relative;
	top:0;
	left:0;
	width:660px;
	height:260px;
	margin:70px auto;
	}
.container_body .info_detail .info_password .span_password{
    font-family: "微软雅黑","宋体";
	color:#7d7d7d;
	font-size: 16px;
	margin-right:10px;
	width:186px;
	text-align:right;
	display:inline-block;
	}
.container_body .info_detail .info_password .password_one label {
	width:160px;
	text-align:left;
	display:inline-block;
	}	
	
.container_body .info_detail .info_password .input_password{
	background:#EFEDEE;
    border: 1px solid #CCCCCC;
    border-radius: 3px;
    color: #7F7F7F;
    font-family: "微软雅黑","宋体";
    font-size: 16px;
    height: 20px;
    padding: 6px 15px 6px 15px;
    width: 165px;
	margin-right:10px;
	}

.container_body .info_detail .info_password .password_two,
.container_body .info_detail .info_password .password_three{
	text-align:left;
	margin-top:10px;
	}
.container_body .info_detail .info_password .password_two a{
	text-decoration:underline;
	color:#0168b5;
	margin-left:250px;
	}
.container_body .info_detail .info_password .password_three{
	margin-top:70px;
	}
.container_body .info_detail .info_password .password_three .login_submit{
	margin-left:250px;
	cursor:pointer;
	width: 142px;
	height:36px;
	color:#FFFFFF;
	border:0px;	
	font-family:"微软雅黑";
	font-size:18px;
	padding-bottom:2px;
	background:url(../../../../public/images/buttonGroup01.png)  no-repeat 0 -718px;
	}
.container_body .info_detail .info_password .password_three .login_submit:hover{
	background:url(../../../../public/images/buttonGroup01.png) no-repeat 0 -754px;
	}
.container_body .info_detail .info_password .password_three .login_submit:active{
	background:url(../../../../public/images/buttonGroup01.png) no-repeat 0 -792px;
	color:#d6d6d6;
	text-shadow: 1px 1px  1px #000;
	padding-bottom:5px;
	}
	
	
	
.container_body .info_detail .info_password .password_four{
	margin-top:20px;
	}
.container_body .info_detail .info_password .password_four a{
	text-decoration:underline;
	color:#0168b5;
	margin-right:10px;
	}
	
	
	
	
	
/*第二步*/
.container_body .info_detail .info_password .input_email{
	background:#EFEDEE;
    border: 1px solid #CCCCCC;
    border-radius: 3px;
    color: #7F7F7F;
    font-family: "微软雅黑","宋体";
    font-size: 16px;
    height: 20px;
    padding: 6px 15px 6px 15px;
    width: 200px;
	margin-right:10px;
	}
.container_body .info_detail .info_password .password_two span{
	margin-left:230px;
	}



	
/*第三步*/
.container_body .info_detail .info_password  .code_character{
	width:540px;
	margin:0px auto 30px;
	line-height:20px;
	}
.container_body .info_detail .info_password  .code_character span{
    font-family: "微软雅黑","宋体";
	color:#0267b9;
	}
.container_body .info_detail .info_password .span_code{
    font-family: "微软雅黑","宋体";
	color:#7d7d7d;
	font-size: 16px;
	margin-right:10px;
	width:210px;
	text-align:right;
	display:inline-block;
	}
.container_body .info_detail .info_password .input_code{
	background:#EFEDEE;
    border: 1px solid #CCCCCC;
    border-radius: 3px;
    color: #7F7F7F;
    font-family: "微软雅黑","宋体";
    font-size: 16px;
    height: 20px;
    padding: 6px 15px 6px 15px;
    width: 115px;
	margin-right:10px;
	}
.container_body .info_detail .info_password .password_two span{
	margin-left:230px;
	}

.container_body .info_detail .info_password .ReAchieve{
	color: #0168B5;
    text-decoration: underline;
	margin-right:10px;
	}
	





/*修改成功*/
.container_body .info_detail .info_password  .info_success{
	width:350px;
	height:50px;
	margin:0px auto 30px;
	}
.container_body .info_detail .info_password  .info_success .success_ico{
	width:32px;
	height:32px;
	float:left;
	margin-top: 10px;
	background:url(../../../pubimg/images/changeMail.png) 0 0 no-repeat;
	}
.container_body .info_detail .info_password  .info_success .success_right{
	width:300px;
	height:50px;
	float:left;
	margin-left:15px;
	text-align:left;
	}
.container_body .info_detail .info_password  .info_success .success_right .succe{
	height:32px;
    color: #000;
    font-family: "微软雅黑","宋体";
    font-size: 20px;
	}	


/*修改失败*/
.container_body .info_detail .info_password  .info_success .failed_ico{
	width:32px;
	height:32px;
	float:left;
	margin-top: 10px;
	background:url(../../../pubimg/images/changeMail.png) 0 -37px no-repeat;
	}
	


/*手机验证*/
.container_body .info_detail .info_password  table .tr_phone{
	height:50px;
	}