/*JS去除数组中重复的值*/
Array.prototype.deleteEleDis = function () {
	var a = [], b = [];
	for (var prop in this) {
		var d = this[prop];
		if (d === a[prop]) continue; //防止循环到prototype
		if (b[d] != 1) {
			a.push(d);
			b[d] = 1;
		}
	}
	return a;
}
