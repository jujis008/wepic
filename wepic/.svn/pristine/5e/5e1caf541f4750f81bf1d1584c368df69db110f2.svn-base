.container_body{
	width:870px;
	height:530px;
	border-radius:5px;
	background:#fff;
	margin:10px auto 40px;
	text-align:center;
	font-family:"宋体";
	}


.container_body .info_top{
	line-height:90px;
	font-family:"微软雅黑";
	color:#000;
	font-size:26px;
	height:78px;
	width:790px;
	margin:0px auto;
	border-bottom:1px solid #e8e8e8;
	}
.container_body .info_detail{
	width:790px;
	height:400px;
	margin:0px auto 10px;
	border-bottom:1px solid #e8e8e8;
	}
	
	
/*步骤*/
.container_body .info_detail .div_step{
	position:relative;
	top:0;
	left:0;
	width:500px;
	height:50px;
	margin:0px auto;
	font-family:"微软雅黑";
	}

.container_body .info_detail .div_step .step_character div{
	float:left;
	width:165px;
	text-align:center;
	margin:0 auto;
	}
.container_body .info_detail .div_step .step_now_character{
	color:#ee563e;
	}	
	
	
.container_body .info_detail .div_step .step_ico{
	position:relative;
	top:10px;
	left:0;
	margin-top:26px;
	margin-left: 73px;
	}
.container_body .info_detail .div_step .step_ico div{
	float:left;
	}
.container_body .info_detail .div_step .step_gey_line{
	border-bottom:1px solid #e8eae9;
	width:160px;
	height:3px;
	}

.container_body .info_detail .div_step .step_ico .step_now_circle{
	width:9px;
	height:9px;
	background:url(../../../pubimg/images/edit3.png) -90px -263px;
	}
.container_body .info_detail .div_step .step_ico .step_gey_circle{
	width:7px;
	height:7px;
	background:url(../../../pubimg/images/edit3.png) -104px -263px;
	}
/*步骤*/	

.container_body .info_detail .info_password{
	position:relative;
	top:0;
	left:0;
	width:500px;
	height:260px;
	margin:40px auto 0px;
	margin-left:180px;
	}
	
.container_body .info_detail .info_password table{
	text-align:left;
	}	

.container_body .info_detail .info_password table .tr_one{
	height:55px;
	}
.container_body .info_detail .info_password table .tr_two{
	height:90px;
	vertical-align:top;
	}
.container_body .info_detail .info_password table .tr_three{
	height:50px;
	vertical-align:top;
	}	
.container_body .info_detail .info_password table .tr_four a{
	margin-left:40px;
	}			
.container_body .info_detail .info_password .span_password{
    font-family: "微软雅黑","宋体";
	color:#7d7d7d;
	font-size: 16px;
	padding-right:10px;
	width:186px;
	text-align:right;
	}
.container_body .info_detail .info_password .input_password{
	background:#fff;
    border: 1px solid #CCCCCC;
    border-radius: 3px;
    color: #7F7F7F;
    font-family: "微软雅黑","宋体";
    font-size: 16px;
    height: 20px;
    padding: 6px 15px 6px 15px;
    width: 165px;
	margin-right:20px;
	}
.container_body .info_detail .info_password  table a{
	text-decoration:underline;
	color:#0168b5;
	}

.container_body .info_detail .info_password table .login_submit{
	cursor:pointer;
	width: 142px;
	height:36px;
	color:#FFFFFF;
	border:0px;	
	font-family:"微软雅黑";
	font-size:18px;
	background:url(../../../../public/images/buttonGroup01.png)  no-repeat 0 -718px;
	}
.container_body .info_detail .info_password table .login_submit:hover{
	background:url(../../../../public/images/buttonGroup01.png) no-repeat 0 -754px;
	}
.container_body .info_detail .info_password table .login_submit:active{
	background:url(../../../../public/images/buttonGroup01.png) no-repeat 0 -792px;
	color:#d6d6d6;
	text-shadow: 1px 1px  1px #000;
	padding-bottom:5px;
	}